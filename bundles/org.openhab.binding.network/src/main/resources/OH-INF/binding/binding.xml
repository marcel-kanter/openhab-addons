<?xml version="1.0" encoding="UTF-8"?>
<binding:binding id="network" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:binding="https://openhab.org/schemas/binding/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/binding/v1.0.0 https://openhab.org/schemas/binding-1.0.0.xsd">

	<name>Network Binding</name>
	<description>The Network binding checks, whether a device is present in the network or not.</description>
	<config-description>
		<parameter name="arpingPath" type="text" required="true">
			<label>Arping path</label>
			<default>arping</default>
		</parameter>
	</config-description>
</binding:binding>
